  "bugs": {
    "url": "https://github.com/ThomWright/flyd-onAnimationFrame/issues"
  },
  "homepage": "https://github.com/ThomWright/flyd-onAnimationFrame",
  "dependencies": {
    "flyd": "^0",
    "raf": "^3.0.0"
  },
  "devDependencies": {
    "babel": "^5.4.7",
    "babel-eslint": "^3.1.9",
    "chai": "^3",
    "eslint": "^0",
    "mocha": "^2.2.5",
    "rimraf": "^2.3.4"
  }
